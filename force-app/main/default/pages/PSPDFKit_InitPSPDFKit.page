        async function getPlacholderTags(blob) {
            try{
                const iModule = window.iModule;
                let arrayBufferTemplate = await blob.arrayBuffer();
                const zip = new PizZip(arrayBufferTemplate);
                console.log("zip");
                const doc = new docxtemplater(zip, {
                    delimiters: { start: "{{", end: "}}" },
                    modules: [iModule]
                });
                console.log("doc");
                const tags = iModule.getAllTags();
                return tags;
            }catch(e){
                console.log("Error in finding placeholders.");
                console.log(e);
                const allErrorMessages = getErrorExplanations(e.properties);

                alert("The template seems to be invalid: " + JSON.stringify(allErrorMessages));
                console.log(JSON.stringify(allErrorMessages));
                return {"Template invalid.": "Error, no placeholders found."};
            }

            function getErrorExplanations(errorObj) {
                let explanations = "";
            
                function traverseErrors(errors) {
                    if (errors && Array.isArray(errors)) {
                        errors.forEach((error) => {
                            if (error.properties && error.properties.explanation) {
                                explanations += error.properties.explanation + " ";
                            }
                            // Recursively traverse errors if there are nested errors
                            if (error.errors && Array.isArray(error.errors)) {
                                traverseErrors(error.errors);
                            }
                        });
                    }
                }
            
                if (errorObj.errors && Array.isArray(errorObj.errors)) {
                    traverseErrors(errorObj.errors);
                } else {
                    explanations = "No errors found in the array.";
                }
            
                return explanations.trim();
            }
            
            
           
